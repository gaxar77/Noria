<UserControl x:Class="Noria.UI.DirectoryPathBreadCrumb"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Noria"
             mc:Ignorable="d" 
             d:DesignHeight="150" d:DesignWidth="800">
    <Border BorderThickness="1" BorderBrush="Silver">
        <StackPanel Name="mainPanel" Orientation="Horizontal"
                    MouseDown="mainPanel_MouseDown"
                    HorizontalAlignment="Stretch"
                    Background="LightBlue">
        </StackPanel>
    </Border>
</UserControl>
